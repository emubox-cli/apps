{
    "name": "DuckStation",
    "consoles": ["psx"],
    "gameExec": "-fullscreen -- {}",
    "romQuery": ".*(.bin|.BIN|.img|.IMG|.iso|.ISO|.cue|.CUE|.chd|.CHD|.cpe|.CPE|.ecm|.ECM|.mds|.MDS|.pbp|.PBP|.elf|.ELF|.exe|.EXE|.psexe|.PSEXE|.ps-exe|.PS-EXE|.psx|.PSX|.psf|.PSF|.minipsf|.MINIPSF|.m3u|.M3U|.psxgpu|.PSXGPU)",
    "postInstall": {
        "makeLinks": {
            "<bios>/<id>": "<config>/duckstation/bios"
        },
        "makeDirs": [
            "<config>/duckstation"
        ],
        "makeFiles": [{
            "path": "<config>/duckstation/settings.ini",
            "content": {
                "GameList": {
                    "RecursivePaths": "<roms>/psx"
                }
            }
        }]
    },
    "installOptions": {
        "flatpak": "org.duckstation.DuckStation",
        "aur": "duckstation-git",
        "aurExportName": "duckstation",
        "gitRepo": "stenzek/duckstation",
        "gitRe": "DuckStation-x64.AppImage"
    },
    "$schema": "_schema.json"
}
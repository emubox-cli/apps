{
    "name": "Yuzu",
    "consoles": ["switch"],
    "gameExec": "-f -g {}",
    "romQuery": ".*(.kip|.KIP|.nca|.NCA|.nro|.NRO|.nso|.NSO|.nsp|.NSP|.xci|.XCI)",
    "postInstall": {
        "makeLinks": {},
        "makeDirs": [
            "<config>/<id>",
            "<save>/<id>/nand",
            "<save>/<id>/sdmc"
        ],
        "makeFiles": [
            {
                "path": "<config>/<id>/qt-config.ini",
                "content": {
                    "Data%20Storage": {
                        "nand_directory": "<save>/<id>/nand",
                        "sdmc_directory": "<save>/<id>/sdmc"
                    },
                    "UI": {
                        "Paths\\gamedirs\\4\\path": "<roms>/switch",
                        "Paths\\gamedirs\\4\\deep_scan": "true",
                        "Paths\\gamedirs\\4\\path\\expanded": "true",
                        "Paths\\gamedirs\\size": "4"
                    }
                }
            }
        ]
    },
    "installOptions": {
        "manual": true
    },
    "$schema": "_schema.json"
}
